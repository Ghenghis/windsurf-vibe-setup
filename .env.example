# ============================================
# VIBE PROJECT ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and add your own keys
# The project works 100% without any API keys using local models
# API keys are optional enhancements for power users

# ============================================
# LOCAL SERVICES (Always Available - No Keys Needed)
# ============================================

# LM Studio Configuration
LMSTUDIO_API_BASE_URL=http://localhost:1234
LMSTUDIO_MODEL_PATH=C:\Users\Admin\.lmstudio\models

# Ollama Configuration
OLLAMA_API_BASE_URL=http://localhost:11434
OLLAMA_MODEL_PATH=C:\Users\Admin\.ollama\models

# VIBE System Configuration
VIBE_DATA_DIR=./vibe-data
VIBE_LOG_LEVEL=info
VIBE_PORT=5000
VIBE_ENABLE_DEBUG=false
VIBE_AUTO_REPAIR=true
VIBE_AUTO_OPTIMIZE=true

# ============================================
# OPTIONAL AI MODEL ENHANCEMENTS
# ============================================
# Add your API keys below for enhanced capabilities
# Leave blank to use only local models

# OpenAI API (GPT-4, DALL-E, etc.)
OPENAI_API_KEY=
OPENAI_ORG_ID=
OPENAI_MODEL_PREFERENCE=gpt-4-turbo-preview

# Anthropic Claude API
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL_PREFERENCE=claude-3-opus-20240229

# Google AI (Gemini, PaLM)
GOOGLE_GENERATIVE_AI_API_KEY=
GOOGLE_AI_MODEL_PREFERENCE=gemini-pro

# xAI Grok API
XAI_API_KEY=
XAI_MODEL_PREFERENCE=grok-beta

# HuggingFace (Model Downloads)
HUGGINGFACE_TOKEN=
HUGGINGFACE_CACHE_DIR=./cache/huggingface

# ============================================
# DEVELOPMENT TOOLS (Optional)
# ============================================

# GitHub Integration
GITHUB_TOKEN=
GITHUB_USERNAME=
GITHUB_DEFAULT_REPO=
GITHUB_CACHE_DIR=./cache/github

# Version Control
GIT_AUTHOR_NAME=
GIT_AUTHOR_EMAIL=
GIT_DEFAULT_BRANCH=main

# ============================================
# VOICE & MEDIA (Optional)
# ============================================

# Eleven Labs (Voice Synthesis)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# ============================================
# SEARCH & DATA (Optional)
# ============================================

# Brave Search API
BRAVE_SEARCH_API_KEY=

# ============================================
# LOCAL DATABASE
# ============================================

# SQLite (Default - No Config Needed)
DATABASE_TYPE=sqlite
DATABASE_PATH=./vibe-data/database.db

# PostgreSQL/Supabase (Optional Local Instance)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vibe

# Supabase Local Development
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters

# ============================================
# PERFORMANCE & OPTIMIZATION
# ============================================

# Memory Management
DEFAULT_NUM_CTX=12288
MAX_MEMORY_MB=16384
CACHE_SIZE_MB=2048
MAX_WORKERS=4

# Model Context Sizes
# 32768 = 36GB VRAM | 24576 = 32GB | 12288 = 26GB | 6144 = 24GB
MODEL_CONTEXT_SIZE=12288

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./vibe-data/logs/vibe.log
LOG_ROTATE_SIZE=10M
LOG_ROTATE_COUNT=5

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_INTERVAL_MS=60000

# ============================================
# SECURITY
# ============================================

# Authentication (for web interface)
ENABLE_AUTH=false
SESSION_SECRET=change-this-to-random-string
SESSION_TIMEOUT_MINUTES=1440

# CORS Settings
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# NETWORK & COMMUNICATION
# ============================================

# WebSocket Server (Real-Time Sync)
WEBSOCKET_PORT=8080
WEBSOCKET_HEARTBEAT_MS=30000

# API Server
API_PORT=5000
API_BASE_PATH=/api/v1

# ============================================
# FILE SYSTEM
# ============================================

# Storage Paths
STORAGE_PATH=./vibe-data
TEMP_PATH=./vibe-data/temp
BACKUP_PATH=./vibe-data/backups
SNAPSHOT_PATH=./vibe-data/snapshots

# File Limits
MAX_FILE_SIZE_MB=100
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=.js,.json,.md,.txt,.html,.css

# ============================================
# AUTOMATION & SCHEDULING
# ============================================

# Auto-Save
AUTO_SAVE_ENABLED=true
AUTO_SAVE_INTERVAL_MS=300000

# Auto-Backup
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL_HOURS=24
AUTO_BACKUP_KEEP_COUNT=7

# Auto-Optimization
AUTO_OPTIMIZE_ENABLED=true
AUTO_OPTIMIZE_INTERVAL_HOURS=6

# ============================================
# DEBUGGING & DEVELOPMENT
# ============================================

# Debug Mode
DEBUG_MODE=false
DEBUG_VERBOSE=false
DEBUG_SAVE_TRACES=false

# Profiling
ENABLE_PROFILING=false
PROFILE_CPU=false
PROFILE_MEMORY=false

# Time-Travel Debugging
TIME_TRAVEL_ENABLED=true
TIME_TRAVEL_MAX_EVENTS=10000

# ============================================
# INTEGRATIONS
# ============================================

# Docker
DOCKER_ENABLED=true
DOCKER_SOCKET=/var/run/docker.sock

# Git Hooks
GIT_HOOKS_ENABLED=true
GIT_HOOKS_PATH=./.git/hooks

# NPM/Yarn
PACKAGE_MANAGER=npm
NODE_ENV=development

# ============================================
# UI & INTERFACE
# ============================================

# Web UI
WEB_UI_ENABLED=true
WEB_UI_PORT=3000
WEB_UI_AUTO_OPEN=true

# CLI Colors
CLI_COLORS_ENABLED=true
CLI_EMOJI_ENABLED=true

# Progress Bars
SHOW_PROGRESS_BARS=true
PROGRESS_BAR_FORMAT=[:bar] :percent :etas
