{
  "name": "windsurf-vibe-setup",
  "version": "1.0.0",
  "description": "AI-powered development environment with 50+ self-evolving modules",
  "author": "Ghenghis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ghenghis/windsurf-vibe-setup.git"
  },
  "bugs": {
    "url": "https://github.com/Ghenghis/windsurf-vibe-setup/issues"
  },
  "homepage": "https://github.com/Ghenghis/windsurf-vibe-setup#readme",
  "keywords": [
    "ai",
    "machine-learning",
    "self-evolving",
    "windsurf",
    "vibe",
    "mcp",
    "development-environment"
  ],
  "scripts": {
    "setup": "pwsh scripts/setup-windows.ps1",
    "setup:unix": "bash scripts/setup-unix.sh",
    "test:install": "node scripts/test-installation.js",
    "autopilot": "node mcp-server/src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "validate:json": "node scripts/validate-json.js",
    "validate:yaml": "yaml-lint .github/**/*.yml",
    "benchmark": "pwsh scripts/testing/Run-WindsurfBenchmark.ps1",
    "benchmark:html": "pwsh scripts/testing/Run-WindsurfBenchmark.ps1 -ExportHtml",
    "scan:secrets": "node scripts/scan-secrets.js",
    "scan:deps": "node scripts/scan-dependencies.js",
    "repair": "node scripts/auto-repair.js",
    "repair:dry": "node scripts/auto-repair.js --dry-run",
    "metrics": "node scripts/collect-metrics.js",
    "audit:security": "node scripts/security-audit.js",
    "security": "npm run scan:secrets && npm run scan:deps && npm run audit:security",
    "free-local:setup": "pwsh free-local/scripts/setup-all.ps1",
    "free-local:health": "node free-local/scripts/ai-orchestrator.js health",
    "free-local:start": "node free-local/scripts/ai-orchestrator.js start",
    "free-local:stop": "node free-local/scripts/ai-orchestrator.js stop",
    "free-local:daemon": "node free-local/scripts/health-daemon.js start",
    "ai:run": "node free-local/scripts/ai-orchestrator.js run",
    "ai:provision": "node free-local/scripts/ai-orchestrator.js provision",
    "test": "jest",
    "prepare": "node -e \"try{require('husky').install()}catch(e){}\"",
    "self-audit": "node self-audit.js",
    "self-repair": "node self-audit.js --fix",
    "update-docs": "node scripts/update-docs.js",
    "count-tools": "node -e \"const fs=require('fs'); const c=fs.readFileSync('./mcp-server/src/index.js','utf8'); console.log('Tool handlers:',c.match(/async \\\\(args\\\\) =>/g).length)\"",
    "optimize": "node scripts/optimize.js",
    "self-enhance": "node scripts/self-enhance.js",
    "vibe-mode": "node perpetual-harness.js",
    "anonymous": "node perpetual-harness.js --anonymous",
    "perpetual": "node perpetual-harness.js --perpetual",
    "vibify-docs": "node scripts/vibify-docs.js",
    "real-time": "node scripts/real-time-monitor.js",
    "anonymous-stats": "node scripts/anonymous-stats.js",
    "vibe-check": "node -e \"console.log('ðŸŒŠ VIBE LEVEL: MAXIMUM!')\"",
    "activate-all": "npm run vibe-mode & npm run anonymous & npm run perpetual",
    "unified": "node unified-system.js",
    "unified-vibe": "node unified-system.js",
    "start-all": "node activate-vibe.js",
    "vibe:v5": "node enhancements/perpetual-harness-v2.js",
    "vibe:migrate": "node scripts/migrate-to-v5.js",
    "vibe:stateful": "node enhancements/perpetual-harness-v2.js --stateful",
    "vibe:workflow": "node enhancements/perpetual-harness-v2.js --workflow",
    "test:v5": "node scripts/test-enhancements.js",
    "vibe:ultimate": "node enhancements/perpetual-harness-v3.js",
    "vibe:v6": "node enhancements/perpetual-harness-v3.js",
    "monitor:learning": "tail -f vibe-data/logs/learning/*.jsonl",
    "monitor:research": "tail -f vibe-data/logs/research/*.jsonl",
    "monitor:all": "tail -f vibe-data/logs/detailed/*.jsonl",
    "health:check": "node -e \"require('./enhancements/core/self-healing-system').getStatus()\"",
    "analytics:dashboard": "node -e \"require('./enhancements/core/comprehensive-logging-system').generateAnalytics()\"",
    "hive-mind": "node gpu-hive-mind.js",
    "collective": "node gpu-hive-mind.js",
    "gpu-vibe": "node gpu-hive-mind.js --gpu",
    "benchmark-models": "node gpu-hive-mind.js --benchmark",
    "download-models": "node gpu-hive-mind.js --download",
    "vibe-display": "node real-time-vibe-server.js",
    "real-time-vibe": "node real-time-vibe-server.js",
    "95-percent": "node real-time-vibe-server.js",
    "start": "node systems/unified-system.js",
    "vibe:start": "node systems/activate-vibe.js",
    "mcp:start": "node mcp-server/src/index.js",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:validate": "node scripts/validate-docs.js",
    "audit": "node scripts/complete-project-audit.js",
    "prepare:github": "node scripts/prepare-for-github.js"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "markdownlint-cli2": "^0.12.1",
    "prettier": "^3.7.4",
    "yaml-lint": "^1.7.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint-cli2 --fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^17.2.3",
    "ora": "^5.4.1"
  }
}
